algoritmo "Contador Ate 10"
var
   Contador, Soma, Num1: Inteiro
inicio
      Contador <- 1
      Enquanto (Contador <= 10) Faca
      Escreva("Digite um numero: ")
      Leia (Num1)
      Soma <- Soma + Num1
      Contador <- Contador + 1
      Se (Num1 = 0) entao
      Fimalgoritmo
      FimSe
      FimEnquanto
      Escreval ("Soma: ", Soma)
fimalgoritmo